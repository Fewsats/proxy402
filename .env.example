# Database Configuration
DB_HOST=db
DB_PORT=5432
DB_USER=user
DB_PASSWORD=password
DB_NAME=linkshrink
DB_SSLMODE=disable # Use 'require' or 'verify-full' for production with SSL

# Application Configuration
APP_PORT=8080

# JWT Configuration
JWT_SECRET=your-very-secret-key # CHANGE THIS! Use a long, random string.
JWT_EXPIRATION_HOURS=72

# x402 Paywall Configuration (for /shrink endpoint)
X402_PRICE="0.00001"                 # Price per shrink request (in ETH or relevant currency - check facilitator)
X402_PAYMENT_ADDRESS=""             # Your Ethereum wallet address to receive payments
X402_FACILITATOR_URL="https://x402.org/facilitator" # Default public facilitator
X402_RESOURCE_URL=""                # URL of the protected resource (e.g., http://localhost:8080/shrink). Can be auto-detected if empty.
